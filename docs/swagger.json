                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "cosmetics"
                ],
                "summary": "Update cosmetic",
                "parameters": [
                    {
                        "type": "string",
                        "format": "uuid",
                        "description": "Cosmetic ID (UUID)",
                        "name": "id",
                        "in": "path",
                        "required": true
                    },
